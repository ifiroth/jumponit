{% extends "@Modules/jumponit/template/admin/index.html.twig" %}

{% block main %}
    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Produit</th>
            <th scope="col">Vendeur</th>
            <th scope="col">Ville</th>
            <th scope="col">Dernière action</th>
        </tr>
        </thead>
        <tbody>
        {% for product in products %}
            <tr>
                <th scope="col">#</th>
                <td>{{ product.product_name }}</td>
                <td>{{ product.seller_name }}</td>
                <td class="d-inline-flex">
                    <select class="custom-select">
                        <option value="0" selected disabled>Sélectionner</option>
                        {% for city in cities %}
                            {% if city.id_feature_value %}
                                <option value="{{ city.id_feature_value }}">{{ city.nom_comm }}</option>
                            {% endif %}
                        {% endfor %}
                    </select>
                    <input type="submit" value="Attribuer">
                </td>
                <td>Dernière action</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}
